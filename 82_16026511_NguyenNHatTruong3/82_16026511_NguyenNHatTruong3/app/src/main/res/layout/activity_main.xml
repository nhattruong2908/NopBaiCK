<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="149dp">

        <TextView
            android:id="@+id/donut_for_y"
            android:layout_width="191dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="53dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/donut_for_y" />
        />

        <TextView
            android:id="@+id/donut_yello"
            android:layout_width="111dp"
            android:layout_height="101dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:background="@mipmap/donut_yello" />
    </LinearLayout>

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="23dp"
        android:background="@drawable/backround_edittext"
        android:drawableLeft="@drawable/email_foreground"
        android:text="demo@gmail.com" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="23dp"
        android:background="@drawable/backround_edittext"
        android:drawableLeft="@drawable/pass_foreground"
        android:text="123456" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="23dp"
        android:background="@drawable/background_button"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="185dp"
        android:layout_height="185dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@mipmap/donut_pink_foreground"/>

</LinearLayout>